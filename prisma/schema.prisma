generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Task {
  id          String    @id @default(uuid())
  name        String
  description String?
  dueAt       DateTime? @map("due_at")
  completedAt DateTime? @map("completed_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  
  @@map("tasks")
}